{
  "name": "llm-playground-backend",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/app/server.js",
  "scripts": {
    "dev": "tsx watch src/app/server.ts",
    "build": "tsc -p tsconfig.json",
    "postbuild": "tsc-alias -p tsconfig.json --resolve-full-paths --resolve-full-extension .js && mkdir -p dist/modules/rag/knowledge/docs && cp src/modules/rag/knowledge/docs/*.txt dist/modules/rag/knowledge/docs/",
    "start": "node dist/app/server.js",
    "db:delete-qdrant": "tsx src/modules/rag/core/deleteQdrantIndex.ts",
    "lint": "eslint . --ext .ts,.js"
  },
  "dependencies": {
    "@langchain/core": "^1.1.5",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/openai": "^1.2.0",
    "@langchain/qdrant": "^1.0.1",
    "@langchain/tavily": "^1.2.0",
    "@langchain/textsplitters": "^1.0.1",
    "@prisma/adapter-better-sqlite3": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@qdrant/js-client-rest": "^1.16.1",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "langsmith": "^0.4.0",
    "openai": "^4.58.2",
    "prisma": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.48.0"
  }
}
